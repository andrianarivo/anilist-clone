{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "bundler",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@theme/*": ["theme/*"],
			"@types/*": ["types/*"],
			"@hooks/*": ["hooks/*"],
			"@constants/*": ["constants/*"],
		}
	}
}
