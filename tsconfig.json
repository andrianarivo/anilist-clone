{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "bundler",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@utils/*": ["./src/utils/*"],
			"@components/*": ["components/*"],
			"@navigators/*": ["./src/navigators/*"],
			"@screens/*": ["./src/screens/*"],
			"@theme/*": ["theme/*"]
		}
	}
}
